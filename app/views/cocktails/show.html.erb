<h1> <%= @cocktail.name %></h1>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<% @cocktail.doses.each do |dose| %>
<h4>
  <%= dose.description %>,
<%= dose.ingredient.name %>,
<%= link_to "Destroy", dose_path(dose.id), method: :delete %>
</h4>

<% end %>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail.id)  %>
<%= link_to "Back", cocktails_path %>
